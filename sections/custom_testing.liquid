<style>
  /* Estilos base (Móvil Primero) */
  .custom-blog-section {
    padding: 4rem 1rem;
  }
  .custom-blog__header {
    margin-bottom: 3.5rem;
    text-align: center;
    max-width: 640px;
    margin-left: auto;
    margin-right: auto;
  }
  .custom-blog__tagline {
    font-weight: 600;
    margin-bottom: 1rem;
    font-size: 1rem;
  }
  .custom-blog__heading {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }
  .custom-blog__grid {
    display: grid;
    grid-template-columns: 1fr; /* 1 columna por defecto */
    gap: 2.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  .article-card__image {
    display: block;
    margin-bottom: 1.5rem;
  }
  .article-card__image img {
    width: 100%;
    aspect-ratio: 3/2;
    object-fit: cover;
    border-radius: 8px;
  }
  .article-card__category {
    font-weight: 600;
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }
  .article-card__title-link {
    display: block;
    margin-bottom: 0.5rem;
    text-decoration: none;
    color: inherit;
  }
  .article-card__title {
    font-size: 1.25rem;
    font-weight: 700;
  }
  .article-card__excerpt {
    margin-bottom: 1.5rem;
  }
  .article-card__author-info {
    display: flex;
    align-items: center;
  }
  .article-card__author-avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 9999px;
    margin-right: 1rem;
  }
  .article-card__author-name {
    font-weight: 600;
    font-size: 0.875rem;
  }
  .article-card__meta {
    display: flex;
    align-items: center;
    font-size: 0.875rem;
    color: #6c6c6c;
  }
  .article-card__meta-divider {
    margin: 0 0.5rem;
  }
  .custom-blog__button-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 3.5rem;
  }
  .custom-blog__button {
    padding: 0.75rem 1.5rem;
    border: 1px solid #000;
    border-radius: 4px;
    text-decoration: none;
    color: #000;
  }

  /* --- LA MAGIA RESPONSIVE --- */
  /* Se aplica solo si la pantalla es más ancha de 750px */
  @media (min-width: 750px) {
    .custom-blog__grid {
      grid-template-columns: repeat(3, 1fr); /* 3 columnas en escritorio */
    }
    .custom-blog-section {
       padding: 6rem 2rem;
    }
     .custom-blog__heading {
      font-size: 3rem;
    }
  }
</style>

